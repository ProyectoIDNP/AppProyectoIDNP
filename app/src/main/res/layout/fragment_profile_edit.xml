<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".prueba.fragments.ProfileEditFragment">

    <View
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:background="@drawable/oval_form" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="95dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageLogo01"
                android:layout_width="160dp"
                android:layout_height="84dp"
                android:src="@drawable/logoapp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textEdirProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Editar Perfil"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageNewUser"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_gravity="center"
                    android:layout_weight=".1"
                    android:padding="2dp"
                    app:srcCompat="@drawable/ic_launcher_background" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="333dp"
                android:layout_height="440dp"
                android:gravity="center"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="279dp"
                    android:layout_height="344dp"
                    android:layout_gravity="center"
                    android:background="@drawable/fondo_blanco"
                    android:foregroundGravity="center"
                    app:cardCornerRadius="50dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="94dp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView_name"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:text="Nombre"
                            android:textColor="#0C0000" />

                        <EditText
                            android:id="@+id/editName"
                            android:layout_width="201dp"
                            android:layout_height="wrap_content"
                            android:backgroundTint="#4CAF50"
                            android:ems="10"
                            android:hint="Juan Torres"
                            android:inputType="textPersonName"
                            android:singleLine="false"
                            android:textColor="#000000"
                            android:textColorHint="#A8A8A8"
                            android:textSize="13dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="231dp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView_email"
                            android:layout_width="193dp"
                            android:layout_height="wrap_content"
                            android:text="Correo Electronico"
                            android:textColor="#000000" />

                        <EditText
                            android:id="@+id/editEmail"
                            android:layout_width="199dp"
                            android:layout_height="wrap_content"
                            android:backgroundTint="#4CAF50"
                            android:ems="10"
                            android:hint="juan@gmail.com"
                            android:inputType="textPersonName"
                            android:textColor="#000000"
                            android:textColorHint="#A8A8A8"
                            android:textSize="13dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:layout_marginTop="250dp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <Button
                            android:id="@+id/buttonSavePerfil"
                            android:layout_width="215dp"
                            android:layout_height="wrap_content"
                            android:background="@drawable/button_drawable_standard_v2"
                            android:text="Guardar"
                            android:textColor="#FFEB3B" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</FrameLayout>