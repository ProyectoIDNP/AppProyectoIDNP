<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"

    tools:context=".prueba.fragments.EditPasswordFragment">
    <View
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@drawable/oval_form" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="113dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageLogo"
                android:layout_width="247dp"
                android:layout_height="113dp"
                android:src="@drawable/logoapp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Cambiar Contraseña"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="66dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textNameUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Juan Torres"
                android:textColor="#FFFFFF"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="333dp"
                android:layout_height="440dp"
                android:gravity="center"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="279dp"
                    android:layout_height="374dp"
                    android:layout_gravity="center"
                    android:background="@drawable/fondo_blanco"
                    android:foregroundGravity="center"
                    app:cardCornerRadius="50dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textMessageInstructions"
                            android:layout_width="207dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:gravity="center"
                            android:text="Introduce tu contraseña actual y tu contraseña nueva"
                            android:textColor="#000000"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="94dp"
                        android:layout_marginTop="50dp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView_name"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:text="Contraseña Actual"
                            android:textColor="#0C0000"
                            android:textSize="12sp" />

                        <EditText
                            android:id="@+id/currentPassword"
                            android:layout_width="201dp"
                            android:layout_height="wrap_content"
                            android:backgroundTint="#4CAF50"
                            android:ems="10"
                            android:hint="12345"
                            android:inputType="textPersonName"
                            android:password="true"
                            android:singleLine="false"
                            android:textColor="#000000"
                            android:textColorHint="#A8A8A8"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="115dp"
                        android:layout_marginTop="100dp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView_email"
                            android:layout_width="193dp"
                            android:layout_height="wrap_content"
                            android:text="Contraseña Nueva"
                            android:textColor="#000000"
                            android:textSize="12sp" />

                        <EditText
                            android:id="@+id/newPassword"
                            android:layout_width="199dp"
                            android:layout_height="wrap_content"
                            android:backgroundTint="#4CAF50"
                            android:ems="10"
                            android:hint="74589"
                            android:inputType="textPersonName"
                            android:password="true"
                            android:textColor="#000000"
                            android:textColorHint="#A8A8A8"
                            android:textSize="12sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:layout_marginTop="300dp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <Button
                            android:id="@+id/buttonSavePerfil"
                            android:layout_width="174dp"
                            android:layout_height="wrap_content"
                            android:background="@drawable/button_drawable_standard_v2"
                            android:text="Cambiar Contraseña"
                            android:textColor="#FFEB3B"
                            android:textSize="12sp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</FrameLayout>